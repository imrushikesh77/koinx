{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" },      
    { "src": "api/updatePrice.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/.*", "dest": "server.js" }              
  ],
  "crons": [
    {
      "path": "/api/updatePrice",      
      "schedule": "*/1 * * * *"        
    }
  ]
}
